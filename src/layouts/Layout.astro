---
import "aos/dist/aos.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header class="max-w-2xl mx-auto px-6 flex sm:mt-4 mt-12 justify-end">
      ES
    </header>
    <div>
      <slot />
    </div>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #001a12;
    color: #ff8132;

    scroll-behavior: smooth;
  }
  body > div {
    @apply min-h-screen font-sans antialiased max-w-2xl mx-auto py-12 sm:py-24 px-6 text-pretty;
  }
</style>

<script>
  import AOS from "aos";
  AOS.init();
</script>
